<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootFragmentHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- بخش نمایش وقتی لیست خالیه -->
        <LinearLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/homebkg">  <!-- یا میتونی ImageView بذاری -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="لیست سفر ها"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/lavender" />
        </LinearLayout>

        <!-- بخش نمایش لیست سفرها که اول مخفی هست -->
        <LinearLayout
            android:id="@+id/tripListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:visibility="gone"
            android:padding="10dp">
            <!-- اینجا آیتم‌های سفر اضافه میشن -->
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>