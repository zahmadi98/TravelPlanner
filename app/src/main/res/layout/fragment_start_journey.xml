<?xml version="1.0" encoding="utf-8"?>
<com.example.travelplanner.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سفر خود را ثبت کنید:"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:layout_gravity="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editPeopleCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/custom_edittext2"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="تعداد نفرات"
                android:minHeight="50dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/nameTravel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext2"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="نام سفر"
                android:minHeight="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/editDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext2"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="مقصد خود را وارد کنید"
                android:minHeight="50dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnEditDestination"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:drawableRight="@drawable/baseline_add_location_alt_24"
                android:background="@drawable/custom_edittext"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/toDoList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext2"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="وسایل خود را وارد کنید"
                android:minHeight="50dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnToDoList"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:drawableRight="@drawable/baseline_add_24"
                android:background="@drawable/custom_edittext"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="توضیحات:"
            android:textColor="@color/purple_700"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_gravity="end" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom_edittext2"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:layout_marginBottom="16dp"
            android:hint="توضیحات اضافی..." />

        <Button
            android:id="@+id/btnSubmitTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:text="ثبت سفر"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</com.example.travelplanner.CustomScrollView>