<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <!-- عنوان صفحه -->
    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- ایمیل -->
    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: ms.zeinab.ahmadi@gmail.com"
        android:textSize="16sp"
        android:autoLink="email"
        android:linksClickable="true"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="16dp"/>

    <!-- گیت هاب -->
    <TextView
        android:id="@+id/githubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub: https://github.com/zahmadi98"
        android:textSize="16sp"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="16dp"/>
    <!-- لینکدین -->
    <TextView
        android:id="@+id/linkedinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="LinkedIn: https://www.linkedin.com/in/zeinab-ahmadi-27a66b296"
        android:textColor="@color/purple_700"
        android:textSize="16sp" />

</LinearLayout>
